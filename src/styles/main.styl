$primary-color = #A3A4FF;
$seconday-color = #51527F;
$color-font = #ffff;

border-radius(n)
  border-radius n
  border 1px solid white

sum(a, b)
  a + b

body
  background-color $primary-color
  margin 0
  padding 0
  font-size 16px
  color: $color-font

.hero--container 
  height: 450px
  width: 100vw
  background: url(https://images.pexels.com/photos/823696/pexels-photo-823696.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940) no-repeat center center fixed
  background-size: cover 
  background-clip: unset 
 
 .header 
  display: flex
  flex-direction: row
  justify-content: space-between
  &__navbar 
    width: 35%
  .navbar__list
    display: flex
    justify-content: space-between
    list-style: none

div
  background-color $seconday-color
  color white
  padding 1em
  margin sum(10px, 5)
  border-radius(15px)
