$primary-color = #A3A4FF;
$seconday-color = #51527F;
$color-font = #ffff;

border-radius(n)
  border-radius n
  border 1px solid white

sum(a, b)
  a + b

body
  background-color $primary-color
  margin 0
  padding 0
  font-size 16px
  color: $color-font

.hero--container 
  height: 450px
  width: 100vw
  background: url(https://images.pexels.com/photos/823696/pexels-photo-823696.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940) no-repeat center center fixed
  background-size: cover 
  background-clip: unset 
  display: flex
  flex-direction: column
 
.header 
 display: flex
 flex-direction: row
 justify-content: space-between
 &__navbar 
   width: 35%

.navbar__list
   display: flex
   justify-content: space-between
   list-style: none
.title--container 
  height: 100%
  display: flex
  justify-content: center
  align-items: center
.main__title
  justify-content: center
  align-self: center


